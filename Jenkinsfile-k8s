pipeline {
    agent {
        label 'playwright-template' // Always use the playwright pod template
    }
    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Run Playwright Tests') {
            steps {
                container('playwright') {
                    catchError(buildResult: 'UNSTABLE', stageResult: 'UNSTABLE') {
                        sh '''
                            pytest tests/** --alluredir=allure-results
                        '''
                    }
                }
            }
        }

        stage('Generate Report') {
            steps {
                container('playwright') {
                    sh '''
                        python3 Devops/allure_reports-push_script.py
                    '''
                }
            }
        }
    }
}

